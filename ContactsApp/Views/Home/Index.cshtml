@model IEnumerable<ContactsApp.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h1>Contacts</h1>

<a asp-action="Create" class="btn btn-primary">Add New Contact</a>

<table class="table table-striped">
    <thead>
        <tr class="table-primary">
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info">Description</a>
                </td>
            </tr>
        }
    </tbody>
</table>